@model WebBanHangOnline.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Cập nhập tài khoản";
}


<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Cập nhập tài khoản</h3>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.Id)

                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @Value = Model.UserName })
                </div>
                <div class="form-group">
                    <label>Họ tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @Value = Model.FullName })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @Value = Model.Email })
                </div>
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control", @Value = Model.Phone })
                </div>
                <div class="form-group">
                    <label>Quyền</label>
                    @Html.DropDownListFor(x => x.Role, ViewBag.Role as SelectList, "- Chọn quyền -", new { @class = "form-control", @Value = Model.Role })
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nhập lại Mật khẩu</label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Cập nhật</button>
                </div>
            }

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
